@model IEnumerable<ShoppingCartApplication.ViewModels.ProductVM>

@{
    ViewBag.Title = "Select Items to Add to Cart";
}

<div class="spacer-heading-height"></div>
<h1>@ViewBag.Title</h1>



<div class="row" style="padding-bottom: 0px;">
        <div></div>
        <div class="col-sm-3 col-md-3 col-lg-3 col-xs-3">
            @Html.DisplayNameFor(model => model.ProductID)
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 col-xs-3">
            @Html.DisplayNameFor(model => model.ProductName)
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 col-xs-3">
            @Html.DisplayNameFor(model => model.Price)
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 col-xs-3">

        </div>
    </div>
    <div class="row"><hr /></div>

    @foreach (var item in Model)
    {
        <div class="row">
            <div style="padding-bottom: 15px;" class="col-sm-3 col-md-3 col-lg-3 col-xs-3">
                @Html.ActionLink("Add to Cart", "Add", new { id = item.ProductID })
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 col-xs-3">
                @Html.DisplayFor(modelItem => item.ProductID)
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 col-xs-3">
                @Html.DisplayFor(modelItem => item.ProductName)
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 col-xs-3">
                @Html.DisplayFor(modelItem => item.Price)
            </div>
        </div>
    }

</div>